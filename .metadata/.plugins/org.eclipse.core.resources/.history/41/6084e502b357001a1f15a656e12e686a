
public class demo {

	public static void main(String[] args) {
		
		getEvenDigitSum(1224256);
		
	}
	
	public static int getEvenDigitSum(int number) {
		
		int numcopy = number;
		int sum = 0;
		int remainder;
		
		if(numcopy<0) {
			return -1;
		}
		while(number >= 0) {
			remainder = number % 10;
			number = number / 10;
			
			if(remainder % 2 ==0) {
				sum = sum + remainder;
			}
		}
		System.out.println(sum);
		return 0;
	}
	
}
