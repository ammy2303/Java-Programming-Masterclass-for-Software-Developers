
public class demo {

	public static void main(String[] args) {
		isPerfectNumber(6);
	}
	
	public static boolean isPerfectNumber(int number) {
		if(number<1) {
			return false;
		}
		
		int sum = 0;
		
		for (int i = 1; i<number; i++) {
			if(i%number == 0) {
				sum = sum + i;
			}
		}
		
		System.out.println(sum);
		
		if(sum == number) {
			return true;
		}else
			return false;
		
	}
	
}
